PROGRAM orbit
  IMPLICIT NONE

  !DECLARATION
  INTEGER, PARAMETER :: P = 1200
  REAL, PARAMETER :: PI = 3.14
  INTEGER :: Theta, i
  REAL :: R, Epsilon=0
  CHARACTER(len=100) :: filename
  LOGICAL :: check
  
  !EXECUTION
  WRITE(*,*) 'Provide filename:'
  READ(*,*) filename
  INQUIRE(FILE = filename, EXIST = check)
  IF(check) THEN
     WRITE(*,'(A,A10,A)') 'File ',filename,' already exists.'
     WRITE(*,*) '
     
  END IF
  
