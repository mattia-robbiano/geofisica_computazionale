!!$     WRITE(*,'(A)') '------------------------------------'
!!$     WRITE(*,*) NEW_LINE('A')
!!$  END DO outer

  !FORMAT
90 FORMAT(A10, 1X, F4.2)
100 FORMAT(I3, 7X, F7.2)

